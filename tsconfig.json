{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "types": [
      "node"
    ],
    "strict": true,
    "strictPropertyInitialization": false,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist/cli",
    "declaration": true,
    "declarationDir": "dist",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
      "./cli/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
